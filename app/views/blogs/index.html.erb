<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Image</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.content %></td>
        <td><%= image_tag(blog.image.url) if blog.image && blog.image.url %></td>
        <td><%= blog.user.name%></td>
        <td><%= link_to 'Show', blog, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-default"  %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if logged_in? %>
    <ul class="nav nav-tabs">
      <li role="presentation"><%= link_to 'New Blog', new_blog_path %></li>
    </ul>
    <% end %>

